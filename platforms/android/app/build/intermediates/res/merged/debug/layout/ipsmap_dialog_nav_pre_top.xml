<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/ipsmap_colorPrimaryTranslucent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:src="@drawable/ipsmap_nav_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/ipsmap_from"
                android:textColor="@color/ipsmap_white"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_start_region"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="40dp"
                android:background="@color/ipsmap_tvGreenTranslucent">

                <TextView
                    android:id="@+id/tv_start_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_start_floor"
                    android:singleLine="true"
                    android:textColor="@color/ipsmap_white"
                    android:textSize="18sp"
                    tools:text="@string/ipsmap_my_location_share" />

                <TextView
                    android:id="@+id/tv_start_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/ipsmap_white"
                    android:textSize="14sp"
                    tools:text="@string/ipsmap_tool_floor_1" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:text="@string/ipsmap_key_goto"
                android:textColor="@color/ipsmap_white"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_target_region"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="40dp"
                android:background="@color/ipsmap_tvGreenTranslucent">

                <TextView
                    android:id="@+id/tv_target_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_target_floor"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/ipsmap_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_target_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/ipsmap_white"
                    android:textSize="14sp"
                    tools:text="@string/ipsmap_tool_floor_1" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_exchange"
        android:layout_width="20.2dp"
        android:layout_height="23.4dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/ipsmap_switch_location"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>