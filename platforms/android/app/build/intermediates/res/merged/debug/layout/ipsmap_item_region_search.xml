<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/tv_region_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="60dp"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/ipsmap_tvGrey7"
        android:textSize="16sp"
        tools:text="@string/ipsmap_tool_text5" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:textColor="@color/ipsmap_tvGrey5"
        android:textSize="12sp"
        tools:text="100m" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_is_same_floor"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ipsmap_same_floor2"
        android:textSize="11sp"
        android:padding="1dp"
        android:textColor="@color/ipsmap_tvGrey5"
        android:layout_toRightOf="@id/tv_distance"
        android:background="@drawable/ipsmap_border_black4" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_less_distance"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ipsmap_last"
        android:textColor="@color/ipsmap_tvGrey5"
        android:layout_toRightOf="@id/tv_is_same_floor"
        android:background="@drawable/ipsmap_border_black4"
        android:textSize="11sp"
        android:padding="1dp" />

    <TextView
        android:id="@+id/tv_floor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="60dp"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/ipsmap_tvOrg1"
        android:textSize="14sp"
        tools:text="@string/ipsmap_tool_floor4" />

    <LinearLayout
        android:id="@+id/ll_nav"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_nav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ipsmap_ico_go_small" />

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/ipsmap_go_this"
            android:textColor="@color/ipsmap_tvGreen4"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ipsmap_colorDivider" />
</RelativeLayout>