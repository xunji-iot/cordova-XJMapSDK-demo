<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ipsmap_tvGrey6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/ipsmap_colorPrimary"
            android:textSize="16sp"
            tools:text="@string/ipsmap_exit_enter" />
    </LinearLayout>

    <com.locnavi.map.ui.widget.TagContainerLayout
        android:id="@+id/tagcontainerLayout"
        app:tag_border_color="@color/ipsmap_tvBlack4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:container_enable_drag="false"
        app:tag_clickable="true"
        app:tag_theme="none"
        app:tag_text_size="15sp"
        app:tag_text_color="@color/ipsmap_tvBlack5"
        app:tag_background="@drawable/ipsmap_bg_shadow"
        app:container_background_color="@color/ipsmap_tvGrey6"
        app:container_border_color="@color/ipsmap_tvGrey6"
        app:tag_background_color="@color/ipsmap_white"
        app:tag_vertical_padding="10dp"
        app:tag_horizontal_padding="12dp"
        app:vertical_interval="12dp"
        app:horizontal_interval="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/ipsmap_colorDivider" />
</LinearLayout>