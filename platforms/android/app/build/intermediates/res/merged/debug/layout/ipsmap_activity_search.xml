<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ipsmap_white"
    android:orientation="vertical"
    tools:context="com.xunji.xunjimap.ui.activity.IpsSearchActivity">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ipsmap_margin"
        android:paddingBottom="@dimen/ipsmap_margin"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/ipsmap_colorBackground">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:padding="12dp"
            android:src="@drawable/ipsmap_nav_back_black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginRight="@dimen/ipsmap_margin"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/ipsmap_border_white">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ipsmap_ico_search" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ipsmap_ico_voice" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="55dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="@string/ipsmap_destination"
                android:textColor="@color/ipsmap_tvBlack3"
                android:textColorHint="@color/ipsmap_tvGrey2"
                android:textSize="14sp"
                android:imeOptions="actionSearch"
                android:background="@android:color/transparent" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
