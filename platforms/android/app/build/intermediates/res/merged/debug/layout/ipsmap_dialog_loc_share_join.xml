<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/ipsmap_border_white2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="7dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ipsmap_close2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ipsmap_input_group_id"
            android:textColor="@color/ipsmap_tvGrey"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.xunji.xunjimap.ui.widget.Pinview
        android:id="@+id/pinview"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="16dp"
        app:cursorVisible="false"
        app:forceKeyboard="true"
        app:hint=""
        app:inputType="number"
        app:password="false"
        app:pinBackground="@color/ipsmap_tvGrey14"
        app:pinHeight="50dp"
        app:pinLength="4"
        app:pinWidth="50dp"
        app:pinTextColor="@color/ipsmap_tvBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ipsmap_border_green2"
            android:text="@string/ipsmap_cancel"
            android:textColor="@color/ipsmap_tvGreen2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:background="@drawable/ipsmap_border_green3"
            android:text="@string/ipsmap_next"
            android:textColor="@color/ipsmap_white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>