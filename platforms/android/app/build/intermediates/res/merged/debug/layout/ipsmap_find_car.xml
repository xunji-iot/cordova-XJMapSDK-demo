<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@color/ipsmap_translucent"
              android:gravity="center_horizontal"

    >

    <RelativeLayout
        android:layout_width="268dp"
        android:layout_height="398dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="268dp"
            android:layout_height="398dp"
            android:background="@drawable/ipsmap_bg_find_car"/>

        <ImageView
            android:padding="20dp"
            android:id="@+id/iv_close_find_car"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ipsmap_close_find_car"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="@string/ipsmap_stop_time"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            />

        <LinearLayout
            android:id="@+id/ll_find_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_car_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textSize="16sp"
                android:textColor="#FFFFFFFF"/>

            <TextView
                android:id="@+id/tv_car_resgion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                android:text=""
                android:textColor="#FFFFFFFF"
                />

            <TextView
                android:id="@+id/tv_tofindcar"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/ipsmap_border_org1"
                android:gravity="center"
                android:text="@string/ipsmap_to_find_car"
                android:textColor="@color/ipsmap_white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_stop_car_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/ipsmap_stop_car_time2"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/ipsmap_cost_car"
                android:textColor="#FFFFFFFF"
                android:textSize="10sp"
                />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_finsh_find_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="278dp"
                android:id="@+id/tv_confirm"
                android:layout_width="160dp"
                android:layout_height="34dp"
                android:background="@drawable/ipsmap_border_org1"
                android:gravity="center"
                android:text="@string/ipsmap_confirm"
                android:textColor="@color/ipsmap_white"/>


            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/tv_cancle"
                android:layout_width="160dp"
                android:layout_height="34dp"
                android:background="@drawable/ipsmap_border_org2"
                android:gravity="center"
                android:text="@string/ipsmap_cancel"
                android:textColor="@color/ipsmap_tvOrg1"/>

        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/tv_stop"
        android:textSize="14sp"
        android:textColor="@color/ipsmap_white"
        android:gravity="center"
        android:text="@string/ipsmap_finded_car"
        android:background="@drawable/ipsmap_border_bottom_green2"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="390dp"
        android:layout_width="255dp"
        android:layout_height="48dp"/>


</RelativeLayout>