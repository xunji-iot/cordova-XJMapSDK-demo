<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="15dp"
        android:layout_height="28dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/ipsmap_footprint_loc" />

    <View
        android:id="@+id/v_line"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/ipsmap_dashed_line_vertical"
        android:layout_marginLeft="32dp"
        android:layout_below="@id/iv_location"
        android:layerType="software" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_location"
        tools:text="@string/ipsmap_tool_time"
        android:textColor="@color/ipsmap_white"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/tv_region_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ipsmap_margin"
        android:layout_toRightOf="@id/tv_time"
        tools:text="@string/ipsmap_service_center"
        android:textColor="@color/ipsmap_white"
        android:layout_marginTop="3dp" />

</RelativeLayout>