<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ipsmap_border_white2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:padding="0dp"
                android:text="@string/ipsmap_join_or_no"
                android:textColor="@color/ipsmap_tvGrey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/ipsmap_tvGreen"
                android:textSize="16sp"
                tools:text="xiao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/ipsmap_share_group"
                android:textColor="@color/ipsmap_tvGrey"
                android:textSize="16sp" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/ipsmap_border_dash_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/ipsmap_white"
                android:text="组号"
                android:textColor="@color/ipsmap_tvGrey"
                android:textSize="14sp" />

            <com.xunji.xunjimap.ui.widget.Pinview
                android:id="@+id/pinview"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:clickable="false"
                app:changeable="false"
                app:cursorVisible="false"
                app:forceKeyboard="false"
                app:inputType="number"
                app:password="false"
                app:pinBackground="@color/ipsmap_tvGrey14"
                app:pinHeight="40dp"
                app:pinLength="4"
                app:pinWidth="40dp"
                app:pinTextColor="@color/ipsmap_tvBlack" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/ipsmap_mem_share_id"
            android:textColor="@color/ipsmap_tvGrey"
            android:textSize="14sp"></TextView>

        <Button
            android:id="@+id/btn_join"
            android:layout_width="260dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ipsmap_btn_join_group"
            android:text="@string/ipsmap_join_now"
            android:textColor="@color/ipsmap_white"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/ipsmap_iv_close_add_group" />


</LinearLayout>